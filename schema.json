{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "@flisk/analyze-tracking output schema",
  "type": "object",
  "properties": {
    "version": {
      "type": "number",
      "enum": [
        1.0
      ],
      "description": "Version of the schema"
    },
    "events": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9_-]+$": {
          "type": "object",
          "properties": {
            "sources": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "repository": {
                    "type": "string",
                    "description": "Repository URL or name"
                  },
                  "path": {
                    "type": "string",
                    "description": "Relative path to the file where the event is tracked"
                  },
                  "line": {
                    "type": "integer",
                    "description": "Line number in the file where the event is tracked"
                  },
                  "function": {
                    "type": "string",
                    "description": "Name of the function where the event is tracked"
                  }
                },
                "required": [
                  "repository",
                  "path",
                  "line",
                  "function"
                ]
              }
            },
            "destinations": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": [
                  "googleanalytics",
                  "segment",
                  "mixpanel",
                  "amplitude",
                  "rudderstack",
                  "mparticle",
                  "snowplow",
                  "unknown"
                ],
                "description": "Destination analytics platform"
              }
            },
            "properties": {
              "type": "object",
              "patternProperties": {
                "^[a-zA-Z0-9_-]+$": {
                  "type": "object",
                  "properties": {
                    "type": {
                      "type": "string",
                      "description": "Data type of the property (e.g., string, number)"
                    },
                    "required": {
                      "type": "boolean",
                      "description": "Whether this property is required"
                    },
                    "description": {
                      "type": "string",
                      "description": "Description of the property"
                    }
                  },
                  "required": [
                    "type"
                  ]
                }
              }
            }
          },
          "required": [
            "sources",
            "destinations",
            "properties"
          ]
        }
      },
      "additionalProperties": false
    }
  },
  "required": [
    "version",
    "events"
  ]
}
